{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-B",
                "build",
                "."
            ],
            "group": "build",
            "detail": "Configure CMake build system",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--parallel",
                "4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build the project using CMake",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j4"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "detail": "Build using make directly",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "group": "build",
            "detail": "Clean build artifacts using CMake",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/build/src/Nermal",
            "group": "test",
            "detail": "Run the Nermal application",
            "dependsOn": "CMake: Build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "build",
                "--verbose"
            ],
            "group": "test",
            "detail": "Run all unit and functional tests",
            "dependsOn": "CMake: Build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run MNIST Test",
            "type": "shell",
            "command": "${workspaceFolder}/build/tests/functional/mnist_test",
            "group": "test",
            "detail": "Run the MNIST neural network functional test",
            "dependsOn": "CMake: Build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Quick MNIST Test",
            "type": "shell",
            "command": "${workspaceFolder}/build/tests/functional/mnist_quick_test",
            "group": "test",
            "detail": "Run the quick MNIST neural network test",
            "dependsOn": "CMake: Build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}